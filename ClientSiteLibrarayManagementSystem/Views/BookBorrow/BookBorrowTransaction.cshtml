@model BookBorrowViewModel
@{
    ViewData["Title"] = "Transaction";

}

@section Styles {
    <link href="~/css/Author_Dashboard.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
}
<div class="container py-5">
    @if (TempData["SuccessMessage"] != null)
    { 
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="h4 mb-4">Transaction Details</h2>
            <div class="table-responsive">
                <table id="bookBorrowTable" class="table table-hover">
                    <thead class="table-secondary">
                        <tr>
                            <th>BorrowId</th>
                            <th>UserId</th>
                            <th>Barcode</th>
                            <th>Borrow Date</th>
                            <th>Return Date</th>
                            <th>Due Date</th>
                            <th>Status</th>
                           
                        </tr>
                    </thead>

                    <tbody id="bookBorrowGrid">
                        @foreach (var borrowBook in Model.BooksBorrow)
                        {
                            <tr>
                                <td>@borrowBook.BorrowId</td>
                                <td>@borrowBook.UserId</td>
                                <td>@borrowBook.Barcode</td>
                                <td>@borrowBook.BorrowDate</td>
                                <td>@borrowBook.ReturnDate</td>
                                <td>@borrowBook.DueDate</td>
                                <td>@borrowBook.Status</td>
                            </tr>
                        }
                    </tbody>
                    </table>
                
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#bookBorrowTable').DataTable({
                "pagingType": "full_numbers",
                "language": {
                    "paginate": {
                        "first": "<<",
                        "last": ">>",
                        "next": ">",
                        "previous": "<"
                    }
                }
            });
        });
    </script>
}
                              