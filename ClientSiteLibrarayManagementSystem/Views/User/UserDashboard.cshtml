@model UserViewModel

@{
    ViewData["Title"] = "User Dashboard";
}

@section Styles {
    <link href="~/css/Author_Dashboard.css" rel="stylesheet" />
}

<div class="container py-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @await Html.PartialAsync("_UserForm", Model)

    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="h4 mb-4">User Details</h2>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-secondary">
                        <tr>
                            <th>User ID</th>
                            <td>User Profile</td>
                            <th>Username</th>
                            <th>Password</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="userGrid">
                        @foreach (var user in Model.Users)
                        {
                            var imageUrl = $"https://localhost:7116/api/Users/GetUserImage?fileName={user.UserProfile}";
                            <tr>
                                <td>@user.UserID</td>
                                <td>
                                    <img src="@imageUrl" alt="User Image" class="img-thumbnail" style="max-width:100px;" />
                                </td>
                                <td>@user.UserName</td>
                                <td>@user.Password</td>
                                <td>@user.Email</td>
                                <td>@user.Phone</td>
                                <td>@user.Role</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <form asp-controller="User" asp-action="UserDashboard" asp-route-userId="@user.UserID" method="get">
                                            <button type="submit" class="btn btn-warning btn-sm">Edit</button>
                                        </form>
                                        <form asp-controller="User" asp-action="DeleteUser" method="post">
                                            <input type="hidden" name="Id" value="@user.UserID" />
                                            <button type="submit" class="btn btn-danger btn-sm ms-1" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>