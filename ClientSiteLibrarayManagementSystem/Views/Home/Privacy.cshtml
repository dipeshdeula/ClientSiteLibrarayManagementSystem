@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HSMSS LIBRARY</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .sidebar {
            background-color: #2B5876;
            min-height: 100vh;
            color: white;
            padding: 0;
        }

        .sidebar .nav-link {
            color: white;
            padding: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .sidebar .nav-link:hover {
            background-color: rgba(255,255,255,0.1);
        }

        .main-content {
            padding: 2rem;
            background-color: #f8f9fa;
        }

        .logo {
            padding: 1rem;
            font-size: 1.5rem;
            font-weight: bold;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .btn-primary {
            background-color: #2B5876;
            border-color: #2B5876;
        }

        .table th {
            background-color: #6c757d;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2 sidebar">
                <div class="logo">HSMSS LIBRARY</div>
                <nav class="nav flex-column">
                    <a class="nav-link" href="/Setting">
                        <i class="bi bi-gear"></i> Setting
                    </a>
                    <a class="nav-link" href="/Author">
                        <i class="bi bi-person"></i> Author
                    </a>
                    <a class="nav-link" href="/Books">
                        <i class="bi bi-book"></i> Books
                    </a>
                    <a class="nav-link" href="/Students">
                        <i class="bi bi-people"></i> Students
                    </a>
                    <a class="nav-link" href="/Transaction">
                        <i class="bi bi-arrow-left-right"></i> Transaction
                    </a>
                    <a class="nav-link" href="/Issuing">
                        <i class="bi bi-box-arrow-right"></i> Issuing
                    </a>
                    <a class="nav-link mt-auto" href="/Logout">
                        <i class="bi bi-box-arrow-left"></i> Log Out
                    </a>
                </nav>
            </div>
            @* <div class="col-md-10 main-content">
                @RenderBody()
            </div> *@
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


