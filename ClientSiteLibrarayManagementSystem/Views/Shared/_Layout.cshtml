<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]-HSMSS LIBRARY</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js">
    </script>

    @RenderSection("Styles", required: false)
    <style>
        .sidebar {
            background-color: #2B5876;
            min-height: 100vh;
            color: white;
            padding: 0;
        }

            .sidebar .nav-link {
                color: white;
                padding: 1rem;
                display: flex;
                align-items: center;
                font-size:1.25rem;
                gap: 1.5rem;
            }

                .sidebar .nav-link:hover {
                    background-color: rgba(255,255,255,0.1);
                    transform:translateX(5px)
                }

        .main-content {
            padding: 2rem;
            background-color: #f8f9fa;
        }

        .logo {
            padding: 1rem;
            font-size: 1.5rem;
            font-weight: bold;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .btn-primary {
            background-color: #2B5876;
            border-color: #2B5876;
        }

        .table th {
            background-color: #6c757d;
            color: white;
        }
    </style>
</head>
<body>

        <div class="container-fluid">
            <div class="row">
                @if(ViewData["Title"] !="Login")
                {
                    <div class="col-md-2 sidebar">
                        <div class="logo">HSMSS LIBRARY</div>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   
                        <nav class="nav flex-column">
                           @*  <a class="nav-link" href="/Setting">
                                <i class="bi bi-gear"></i> Setting
                            </a> *@
                            <a class="nav-link" asp-action="AuthorDashboard" asp-controller="Author">
                                <i class="bi bi-person"></i> Author
                            </a>
                            <a class="nav-link" asp-action="BookDashboard" asp-controller="Book">
                                <i class="bi bi-book"></i> Books
                            </a>
                        <a class="nav-link" asp-action="BookCopiesDashboard" asp-controller="BookCopies">
                            <i class="bi bi-book"></i> Books Copies
                        </a>
                        <a class="nav-link" asp-action="UserDashboard" asp-controller="User">
                                <i class="bi bi-people"></i> Users
                            </a>
                     @*    <a class="nav-link" asp-action="StudentDashboard" asp-controller="Account">
                            <i class="bi bi-people"></i> Students
                        </a> *@
                        <a class="nav-link" asp-action="BookBorrowTransaction" asp-controller="BookBorrow">
                                <i class="bi bi-arrow-left-right"></i> Transaction
                            </a>
                        <a class="nav-link" asp-action="AddBorrowBook" asp-controller="BookBorrow">
                                <i class="bi bi-box-arrow-right"></i> Issuing
                            </a>
                            <a class="nav-link mt-auto" href="/Logout">
                                <i class="bi bi-box-arrow-left"></i> Log Out
                            </a>
                        </nav>
                    </div>
                }
            <div class="col-md-@(ViewData["Title"] == "Login" ? "12" : "10") main-content">
                @RenderBody()
            </div>
        </div>
        </div>
    
  
        @*  <div>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
 *@
        
    
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

